function round_two_theme() {
  $hooks = array();
  $hooks['round_two_select_form'] = array(
    'render element' => 'form',
    'template' => 'round_two_select_form'
  );
  return $hooks;
}
function round_two_select_form($form, &$form_state) {
  $options = array(
    'first' => t('First'),
    'second' => t('Second'),
    'third' => t('Third'),
  );
  $form['choice'] = array(
    '#type' => 'select',
    '#options' => $options,
    '#title' => t('Make your сhoose'),
  );
  $form['submit'] = array(
    '#type' => 'submit',
    '#value' => t('Go'),
  );
  return $form;
}

function round_two_select_form_submit($form, &$form_state) {
  drupal_set_message(t('You chose %input', array('%input' => $form_state['values']['choice'])));
}

